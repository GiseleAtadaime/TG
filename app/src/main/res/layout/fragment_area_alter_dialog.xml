<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".View.Detalhe.AreaAlterDialogFragment"
                                             android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
            android:src="@drawable/ic_menu_camera"
            android:layout_width="170dp"
            android:layout_height="182dp"
            android:id="@+id/imgArea_DialogFragment" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/edtTxtNome_AreaDialog"
            app:layout_constraintStart_toEndOf="@+id/imgArea_DialogFragment" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" tools:layout_editor_absoluteY="40dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/spiContagem_AreaDialog" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgArea_DialogFragment" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/lblCont_AreaAlterDialog"
            app:layout_constraintBottom_toBottomOf="@+id/imgArea_DialogFragment"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="@string/alter_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCriarAlt_AreaDialog" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imgArea_DialogFragment"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDismiss_AreaDialog" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCriarAlt_AreaDialog"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:text="@string/cancelar"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.016"/>
    <TextView
            android:text="Contador Lote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblCont_AreaAlterDialog" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgArea_DialogFragment" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtNome_AreaDialog"/>

</android.support.constraint.ConstraintLayout>