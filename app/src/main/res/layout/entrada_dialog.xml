<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/entradaDialogLayout">

    <ImageView
            android:layout_width="34dp"
            android:layout_height="0dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imgLabel_EntradaDialog" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/baseline_create_black_24"
            android:id="@+id/imgBtnAlter_EntradaDialog" android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/imgLabel_EntradaDialog" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imgBtnDelete_EntradaDialog" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.876" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/btn_round_edges_brown_border"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/baseline_delete_outline_black_24"
            android:id="@+id/imgBtnDelete_EntradaDialog"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="@+id/imgBtnAlter_EntradaDialog"
            android:background="@drawable/btn_round_edges_brown_border"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtTipo_EntradaDialog"
            app:layout_constraintStart_toEndOf="@+id/imgLabel_EntradaDialog" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnAlter_EntradaDialog"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtTitulo_EntradaDialog"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTipo_EntradaDialog"
            app:layout_constraintStart_toEndOf="@+id/imgLabel_EntradaDialog" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtData_EntradaDialog"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTitulo_EntradaDialog"
            app:layout_constraintStart_toEndOf="@+id/imgLabel_EntradaDialog" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>