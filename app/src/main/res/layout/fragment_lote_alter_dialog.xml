<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   tools:context=".View.Detalhe.LoteAlterDialogFragment"
                                                   android:id="@+id/frameLayout2">
    <ImageView
            app:srcCompat="@drawable/ic_menu_camera"
            android:layout_width="393dp"
            android:layout_height="156dp"
            android:id="@+id/imgLote_LoteDialog" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/layourFoto_LoteDialog"
            app:layout_constraintBottom_toBottomOf="@+id/imgLote_LoteDialog"
            app:layout_constraintEnd_toEndOf="@+id/imgLote_LoteDialog"
            app:layout_constraintStart_toStartOf="@+id/imgLote_LoteDialog"
            app:layout_constraintTop_toTopOf="@+id/imgLote_LoteDialog" android:gravity="bottom"
            android:visibility="gone">
        <Button
                android:text="Tirar foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnTirarFoto_LoteDialog"/>
        <Button
                android:text="Carregar foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnGaleria_LoteDialog"/>
    </LinearLayout>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtTxtNome_LoteDialog" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imgLote_LoteDialog" android:hint="nome do lote (opcional)"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtPlanta_LoteDialog" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtNome_LoteDialog" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:hint="nome da hortaliÃ§a"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCriaAlter_LoteDialog" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPlanta_LoteDialog"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:background="@drawable/btn_round"
            android:textColor="@color/white"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDismiss_LoteDialog" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCriaAlter_LoteDialog"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.026" android:background="@drawable/btn_round_margin"/>
</androidx.constraintlayout.widget.ConstraintLayout>