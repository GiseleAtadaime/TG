<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="145dp"
            android:layout_height="145dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imgQR_qrviewadapter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Area A"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtArea_qrviewadapter"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgQR_qrviewadapter" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Lote 128319239A"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtLote_qrviewadapter"
            tools:layout_editor_absoluteY="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgQR_qrviewadapter" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="12/07/2019"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtData_qrviewadapter"
            app:layout_constraintStart_toEndOf="@+id/imgQR_qrviewadapter" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/txtLote_qrviewadapter" android:layout_marginTop="32dp"/>
</android.support.constraint.ConstraintLayout>
